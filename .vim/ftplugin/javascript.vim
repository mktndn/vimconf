" Syntax highlighting and validation
syntax on                           " syntax highlighing
filetype on                          " try to detect filetypes
filetype plugin indent on    " enable loading indent file for filetype

" do not use cscope.
setlocal nocscopetag

setl tabstop=2
setl shiftwidth=2
setl smarttab
setl expandtab
setl autoindent
setl nosmartindent
setl cindent
setl noignorecase
